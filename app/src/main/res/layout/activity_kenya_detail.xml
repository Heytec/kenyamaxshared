<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">



    <RelativeLayout
        android:tag="character_info_portrait"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar" />


        <ImageView

            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:layout_below="@id/app_bar"
            android:id="@+id/movieThumbnail"
            tools:src="@drawable/kenyamax" />


            <TextView
                android:id="@+id/movieTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/movieThumbnail"
                android:layout_marginLeft="16dp"
                android:alpha="0.87"
                android:gravity="right"
                android:padding="@dimen/size_half_byte"
                android:textSize="@dimen/size_text_primary" />


        <LinearLayout
            android:elevation="4dp"
            android:layout_width="match_parent"
            android:layout_below="@id/movieThumbnail"
            android:orientation="vertical"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="80dp"
           >

            <LinearLayout
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/year"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:textColor="@color/secondary_text"
                    tools:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/primary_text"
                    android:text="@string/info_number_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/rating"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:textColor="@color/secondary_text"
                    tools:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/primary_text"
                    android:text="@string/info_number_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/votes"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/secondary_text"
                    tools:text="16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:gravity="center"
                    android:textColor="@color/primary_text"
                    android:textSize="15sp"
                    android:text="@string/info_number_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>


            <FrameLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">





                <TextView
                    android:id="@+id/synopsis"
                    android:textColor="@color/primary_text"
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />



            </FrameLayout>


            <android.support.v7.widget.CardView
                android:id="@+id/card_vieew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="8dp"
                >

                <LinearLayout
                    android:elevation="4dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">



            <TextView
                android:id="@+id/isis"
                android:textColor="@color/primary"
                android:layout_margin="20dp"
                android:text="Showtime"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/imaxtitle"
                        android:textColor="@color/primary_text"
                        android:layout_margin="20dp"
                        android:text="Imax  Kenya"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/imax"
                        android:textColor="@color/secondary_text"
                        android:layout_margin="20dp"
                        android:text="Imax  Kenya"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />


                    <TextView
                        android:id="@+id/foxtitle"
                        android:textColor="@color/primary_text"
                        android:layout_margin="20dp"
                        android:text="Fox Cineplex Sarit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/foxcinemaplexsarit"
                        android:textColor="@color/secondary_text"
                        android:layout_margin="20dp"
                        android:text="Imax"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />



                    <TextView
                        android:id="@+id/CenturyCinemaxJuctiontitte"
                        android:textColor="@color/primary_text"
                        android:layout_margin="20dp"
                        android:text="Century Cinemax Juction"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/CenturyCinemaxJuction"
                        android:textColor="@color/secondary_text"
                        android:layout_margin="20dp"
                        android:text="Century Cinemax Juction"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />





                    <TextView

                        android:textColor="@color/primary_text"
                        android:layout_margin="20dp"
                        android:layout_width="match_parent"
                   android:layout_height="match_parent" />
                    <!-- android:text="Planet Media Prestige Plaza "-->

               <TextView
                   android:id="@+id/Planetmediaprestigeplaza"
                   android:textColor="@color/secondary_text"
                   android:layout_margin="20dp"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent" />




               <TextView

               android:textColor="@color/primary_text"
               android:layout_margin="20dp"

               android:layout_width="match_parent"
               android:layout_height="match_parent" />
                   <!-- android:text="Planet Media Cinema Westgate "-->

               <TextView
                   android:id="@+id/Planetmediacinemawestgate"
                   android:textColor="@color/secondary_text"
                   android:layout_margin="20dp"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent" />



               <TextView

                   android:textColor="@color/primary_text"
                   android:layout_margin="20dp"

                   android:layout_width="match_parent"
                   android:layout_height="match_parent" />
                    <!--android:text="Kenya Cinema  "-->

               <TextView
                   android:id="@+id/Kenyacinema"
                   android:textColor="@color/secondary_text"
                   android:layout_margin="20dp"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent" />




               <TextView

               android:textColor="@color/primary_text"
               android:layout_margin="20dp"

               android:layout_width="match_parent"
               android:layout_height="match_parent" />
                   <!-- android:text="Anga Sky "-->

               <TextView
                   android:id="@+id/AngaSky"
                   android:textColor="@color/secondary_text"
                   android:layout_margin="20dp"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent" />

               <TextView

                   android:textColor="@color/primary_text"
                   android:layout_margin="20dp"

                   android:layout_width="match_parent"
                   android:layout_height="match_parent" />
                    <!--android:text="Nyali Cinemax"-->

               <TextView
                   android:id="@+id/Nyalicinemax"
                   android:textColor="@color/secondary_text"
                   android:layout_margin="20dp"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent" />




           </LinearLayout>






       </android.support.v7.widget.CardView>


   </LinearLayout>








</RelativeLayout>


</ScrollView>